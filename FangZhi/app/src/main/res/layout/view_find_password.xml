<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_find_password"
    android:layout_width="1000px"
    android:layout_height="800px"
    android:gravity="center"
    android:layout_marginTop="30px"
    android:background="@drawable/bg_login_box"
    android:focusableInTouchMode="true"
    android:visibility="gone"
    android:orientation="vertical">
    <com.buyiren.app.view.ClearEditText
        android:id="@+id/et_new_password"
        android:layout_width="640px"
        android:layout_height="100px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60px"
        android:background="@drawable/shape_edit_bg"
        android:hint="@string/input_new_password"
        android:inputType="textPassword"
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:textColorHint="@color/colorTextGrayBABABA"
        android:textCursorDrawable="@null"
        android:textScaleX="0.96"
        android:textSize="30px" />
    <com.buyiren.app.view.ClearEditText
        android:id="@+id/et_new_password_confirm"
        android:layout_width="640px"
        android:layout_height="100px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60px"
        android:background="@drawable/shape_edit_bg"
        android:hint="@string/input_password_again"
        android:inputType="textPassword"
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:textColorHint="@color/colorTextGrayBABABA"
        android:textCursorDrawable="@null"
        android:textScaleX="0.96"
        android:textSize="30px" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="640px"
        android:layout_height="120px"
        android:layout_marginTop="60px"
        android:layout_gravity="bottom|center_horizontal">

        <Button
            android:id="@+id/btn_commit_change_password"
            android:layout_width="wrap_content"
            android:textSize="30px"
            android:layout_height="match_parent"
            android:text="确定" />

        <Button
            android:id="@+id/btn_change_password_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="30px"
            android:layout_alignParentRight="true"
            android:text="取消" />
    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoLinearLayout>