<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_parent">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="1000px"
            android:layout_height="170px"
            android:layout_marginTop="306px"
            android:background="@drawable/icon_fangzhi_logo" />

        <ImageView
            android:layout_width="1932px"
            android:layout_height="42px"
            android:layout_marginTop="230px"
            android:background="@drawable/bg_brand" />

        <com.fangzhi.app.view.VerticalViewPager
            android:id="@+id/view_pager"
            android:layout_width="wrap_content"
            android:layout_height="444px"
            android:layout_marginTop="132px" />
    </com.zhy.autolayout.AutoLinearLayout>

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="84px"
        android:layout_height="84px"
        android:layout_margin="10dp"
        android:background="@drawable/icon_close" />
    <ImageView
        android:id="@+id/iv_up"
        android:layout_width="96px"
        android:background="@drawable/btn_choose_parent_up"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="826px"
        android:layout_height="44px" />
    <ImageView
        android:id="@+id/iv_down"
        android:layout_width="96px"
        android:background="@drawable/btn_choose_parent_down"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="200px"
        android:layout_marginTop="826px"
        android:layout_height="44px" />
</com.zhy.autolayout.AutoFrameLayout>