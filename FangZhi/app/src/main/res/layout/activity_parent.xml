<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_parent">

    <View
        android:layout_width="2200px"
        android:layout_height="1380px"
        android:layout_gravity="center"
        android:background="#88ffffff" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="425px"
            android:layout_height="296px"
            android:layout_marginTop="266px"
            android:background="@drawable/icon_logo_buqi" />

        <ImageView
            android:layout_width="1932px"
            android:layout_height="42px"
            android:layout_marginTop="180px"
            android:background="@drawable/bg_brand" />

        <com.buqi.app.view.VerticalViewPager
            android:id="@+id/view_pager"
            android:layout_width="wrap_content"
            android:layout_height="444px"
            android:layout_marginTop="100px" />
    </com.zhy.autolayout.AutoLinearLayout>

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="84px"
        android:layout_height="84px"
        android:layout_margin="10dp"
        android:background="@drawable/icon_close" />

    <ImageView
        android:id="@+id/iv_up"
        android:layout_width="96px"
        android:layout_height="44px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="826px"
        android:background="@drawable/btn_choose_parent_up" />

    <ImageView
        android:id="@+id/iv_down"
        android:layout_width="96px"
        android:layout_height="44px"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="200px"
        android:layout_marginTop="826px"
        android:background="@drawable/btn_choose_parent_down" />
</com.zhy.autolayout.AutoFrameLayout>