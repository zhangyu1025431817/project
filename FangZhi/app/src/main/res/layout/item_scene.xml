<?xml version="1.0" encoding="utf-8"?>
<com.fangzhi.app.view.AutoCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="796px"
    android:layout_height="618px"
    android:layout_margin="20px"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_image_scene"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7.3"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/black_3c3c3c"
            android:text="翡翠城"
            android:textSize="40px" />
    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:id="@+id/tv_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#88000000"
        android:padding="20px"
        android:visibility="gone"
        android:textColor="@color/white"
        android:textSize="30px" />
</com.fangzhi.app.view.AutoCardView>