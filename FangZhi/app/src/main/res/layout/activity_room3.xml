<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_press">

    <com.buqi.app.view.MatrixImageView
        android:id="@+id/iv_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         />

    <ImageView
        android:id="@+id/iv_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="60px"
        android:src="@drawable/icon_home" />

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60px"
        android:src="@drawable/icon_close" />

    <ImageView
        android:id="@+id/iv_calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_close"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60px"
        android:src="@drawable/icon_calculate" />

    <ImageView
        android:id="@+id/iv_eye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_calculate"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60px"
        android:src="@drawable/icon_eye" />

    <ImageView
        android:id="@+id/iv_scene_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_eye"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60px"
        android:src="@drawable/icon_scene_more_n" />

      <!--<include layout="@layout/view_room_right_part" />-->
    <com.buqi.app.main.room.ProductView
        android:id="@+id/view_product"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/view_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <com.buqi.app.view.loading.AVLoadingIndicatorView
            android:id="@+id/avi"
            android:layout_width="100dp"
            android:layout_height="40dp" />
    </RelativeLayout>
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/layout_product_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#cc3c3c3c">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="32px" />

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="1414px"
            android:layout_height="1414px"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/iv_frame_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40px"
            android:layout_marginTop="80px"
            android:src="@drawable/icon_close" />
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoRelativeLayout>