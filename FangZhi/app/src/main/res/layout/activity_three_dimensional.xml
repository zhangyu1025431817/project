<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@drawable/shape_gray_line"
    android:orientation="vertical"
    android:showDividers="middle">

    <include layout="@layout/common_title_bar_with_right_button" />

    <com.jude.easyrecyclerview.EasyRecyclerView
        android:id="@+id/recycler_view_type01"
        android:layout_width="match_parent"
        android:background="@color/colorWhite"
        android:paddingLeft="40px"
        android:layout_height="120px" />
    <View
        android:layout_width="match_parent"
        android:background="#AAEBEBEB"
        android:layout_height="1px"/>
    <com.jude.easyrecyclerview.EasyRecyclerView
        android:id="@+id/recycler_view_type02"
        android:layout_width="match_parent"
        android:background="@color/colorWhite"
        android:paddingLeft="40px"
        android:layout_height="120px" />

    <com.jude.easyrecyclerview.EasyRecyclerView
        android:id="@+id/recycler_view_type03"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E3E3E3" />
</com.zhy.autolayout.AutoLinearLayout>